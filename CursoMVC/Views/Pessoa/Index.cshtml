@model CursoMVC.Models.Pessoa
@{
    ViewBag.Title = "Validação de Pessoa";
}

<div class="fg6">
    <h2>Validação de Pessoa</h2>
    <form action="Index" method="post">
        <fieldset>
            <legend>Dados da Pessoa</legend>
            <div>
                <label for="nome">Nome</label>
                <input type="text" name="nome" id="nome" value=" " />
                @Html.ValidationMessageFor(model=>model.Nome)
            </div>
            <div>
                <label for="idade">Idade</label>
                <input type="number" name="idade" id="idade" value=" " />
                @Html.ValidationMessageFor(model=>model.Idade)
            </div>
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value=" " />
                @Html.ValidationMessageFor(model=>model.Email)
            </div>
            <div>
                <label for="login">Login</label>
                <input type="text" name="login" id="login" value=" " />
                @Html.ValidationMessageFor(model=>model.Login)
            </div>
            <div>
                <label for="observacao">Observacao</label>
                <textarea name="observacao"></textarea>
                @Html.ValidationMessageFor(model=>model.Observacao)
            </div>
            <div>
                <label for="senha">Senha</label>
                <input type="password" name="senha" id="senha" value=" " />
                @Html.ValidationMessageFor(model=>model.Senha)
            </div>
            <div>
                <label for="confSenha">Confirmar Senha</label>
                <input type="password" name="confSenha" id="confSenha" value=" " />
                @Html.ValidationMessageFor(model=>model.ConfirmarSenha)
            </div>
            <p>
                <input type="submit" name="cadastrar" value="Cadastrar" />
            </p>
        </fieldset>
    </form>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval");
}

